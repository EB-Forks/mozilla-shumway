{
  "name": "Shumway",
  "version": "(SHUMWAY_VERSION)",
  "manifest_version": 2,
  "icons": {
    "48": "icon.png",
    "64": "icon64.png"
  },
  "applications": {
    "gecko": {
      "id": "shumway-dev@research.mozilla.org"
    }
  },
  "options_ui": {
    "browser_style": true,
    "page": "chrome/options.xhtml"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": [
        "chrome/shumway.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "content/shumway.xhtml"
  ],
  "permissions": [
    "storage"
  ]
}
